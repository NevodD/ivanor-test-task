html,body,div,span,object,iframe,h1,h2,h3,h4,h5,h6,p,a,em,img,b,u,i,ol,ul,dl,li,dd,dl,form,label,table,tbody,tfoot,thead,tr,th,td,input,textarea,button,fieldset
	margin 0
	padding 0
	border none medium

html
	-ms-text-size-adjust: 100%;
	-webkit-text-size-adjust: 100%;
	font-size: fontSize(375)
	scrollbar-gutter: stable
	@media $desktop
		font-size: fontSize(1440)
	@media $bigScreen
		font-size: 13.34px

*, *:focus, *:after, *:before
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)
	-moz-box-sizing border-box
	box-sizing border-box
	outline none

a
	text-decoration: none

button
	border: none
	background-color transparent
	font-family: inherit
	font-weight: inherit
	font-size: inherit
	color inherit
	&:hover
		cursor pointer

img
	max-width: 100%;

body
	display: flex
	flex-direction: column
	min-height: 100vh
	@supports(min-height: 100dvh)
		min-height: 100dvh
	font-family $GothamPro
	font-size: rem(12)
	font-weight: 400
	line-height normal
	color: $textMain
	background-color: $bgMain
	scroll-behavior: smooth
	@media $desktop
		font-size: rem(14)

body:has(.freeze-scroll)
body:has(.freeze-scroll)
	overscroll-behavior-y: contain
	overflow-y: hidden


ul, ol, dl
	list-style: none

input, select
	outline: none
	width: 100%
select
	border: none

.visually-hidden {
  position: absolute;
  width: 1px;
  height: 1px;
  margin: -1px;
  border: 0;
  padding: 0;
  white-space: nowrap;
  clip-path: inset(100%);
  clip: rect(0 0 0 0);
  overflow: hidden;
}

.main-wrapper
	width 89.35%
	margin 0 auto
	max-width: 1655px
	@media $desktop
		width 86.18%

.text-center
	text-align center